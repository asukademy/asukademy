<?php
$disabled = null;

if (!$stage_id)
{
    $active = 'stage';
    $disabled = 'disabled';
}
?>

<ul class="nav nav-pills nav-stacked">
    <li role="presentation" class="<?php echo $active == 'stage' ? 'active' : null; ?> <?php echo $disabled; ?>">
        <a href="<?php echo e($disabled ? '#' : $router->buildHtml('stage', ['course_id' => $course_id, 'id' => $stage_id])); ?>">開課編輯</a>
    </li>
    <li role="presentation" class="<?php echo $active == 'plans' ? 'active' : null; ?> <?php echo $disabled; ?>">
        <a href="<?php echo e($disabled ? '#' : $router->buildHtml('plans', ['course_id' => $course_id, 'stage_id' => $stage_id])); ?>">票價方案</a>
    </li>
    <li role="presentation" class="<?php echo $active == 'classes' ? 'active' : null; ?> <?php echo $disabled; ?>">
        <a href="<?php echo e($disabled ? '#' : $router->buildHtml('classes', ['course_id' => $course_id, 'stage_id' => $stage_id])); ?>">課程內容</a>
    </li>
</ul>

<hr />
